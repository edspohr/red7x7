rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Function to check if user is admin
    function isAdmin() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }
    
    // Function to check if user is pro
    function isPro() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'pro';
    }

    match /users/{userId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null; // Allow registration
      allow update: if request.auth.uid == userId || isAdmin(); // Users edit self, Admin edits anyone
      
      // Subcollection for unlocked contacts
      match /unlockedContacts/{contactId} {
        allow read, write: if request.auth.uid == userId;
      }
    }
    
    match /announcements/{announcementId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
    
    match /meetings/{meetingId} {
      allow read: if request.auth != null;
      allow write: if isAdmin();
    }
  }
}
